<%- include('../layouts/header.ejs') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body">
          <h3 class="text-center mb-4">Edit User</h3>

          <form action="" method="post">
            <input
              type="text"
              name="name"
              class="form-control mb-3"
              placeholder="Enter name"
              value="<%= user.name %>"
              required
            />

            <input
              type="email"
              name="email"
              class="form-control mb-3"
              placeholder="Enter email"
              value="<%= user.email %>"
              required
            />

            <input
              type="text"
              name="mno"
              class="form-control mb-3"
              placeholder="Enter mobile"
              value="<%= user.mobile %>"
              required
            />

            <div class="mb-3">
              <label class="me-2">Verified</label>
              <input type="radio" name="verify" value="1" <% if(user.is_verified
              === 1){ %> checked <% } %> />
              <label class="ms-3 me-2">Unverified</label>
              <input type="radio" name="verify" value="0" <% if(user.is_verified
              === 0){ %> checked <% } %> />
            </div>

            <input type="hidden" name="id" value="<%= user._id %>" />

            <div class="d-grid">
              <input
                type="submit"
                value="Update User"
                class="btn btn-primary"
              />
            </div>
          </form>

          <div class="text-center mt-3">
            <a href="/admin/" class="btn btn-secondary">Go Back</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../layouts/footer.ejs') %>
