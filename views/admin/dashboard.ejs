<% include('../layouts/header.ejs') %>
<h1>Admin Dashboard</h1>
<a href="/admin/new-user">Add User</a>
<table width="50%">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Mobile</th>
    <th>Image</th>
    <th>Verified</th>
    <th>Actions</th>
  </tr>
  <% if(users.length > 0){ 
    for(let i=0;i<users.length;i++){
        %>
        <tr>
            <td><%= users[i].name %></td>
            <td><%= users[i].email %></td>
            <td><%= users[i].mobile %></td>
            <td><img src="/userImages/<%= users[i].image %>" width="100px" height="100px" alt="<%= users[i].mobile %>"></td>
            <td><%
                if(users[i].is_verified === 0){
                    %>
                    <p>Not verified</p>
                    <%
                }else{
                    %>
                    <p>Verified</p>
                    <%
                }
            %></td>
            <td><a href="/admin/edit-user?id=<%= users[i]._id %>">Edit</a></td>
        </tr>
        <%
    }
  }else{ %>
  <tr>
    <td colspan="5">Users Not Found</td>
  </tr>
  <% } %>
</table>
<a href="/admin/home">Back to home</a>
<% include('../layouts/footer.ejs') %>
